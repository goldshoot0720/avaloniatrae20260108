<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:avaloniatrae20260108.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="avaloniatrae20260108.Views.MusicView"
             x:DataType="vm:MusicViewModel">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="20" Margin="0,0,0,20">
            <TextBlock Text="鋒兄音樂歌詞" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            <Button Content="重新整理" Command="{Binding LoadMusicCommand}" IsEnabled="{Binding !IsLoading}" Background="#7E57C2" Foreground="White"/>
            <Button Content="強制刷新" Command="{Binding RefreshMusicCommand}" IsEnabled="{Binding !IsLoading}" Background="#EF5350" Foreground="White"/>
            <StackPanel Orientation="Horizontal" IsVisible="{Binding IsLoading}" VerticalAlignment="Center" Margin="10,0">
                <ProgressBar Value="{Binding ProgressValue}" Maximum="100" IsIndeterminate="False" Width="200" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ProgressValue, StringFormat={}{0:0}%}" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="#B39DDB"/>
        </StackPanel>

        <Grid ColumnDefinitions="300,*" Grid.Row="1">
            <!-- Music List -->
            <Border Grid.Column="0" Background="#4527A0" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                <DockPanel>
                    <TextBlock Text="歌曲列表" DockPanel.Dock="Top" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding MusicList}" SelectedItem="{Binding SelectedMusic}" Background="Transparent">
                         <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                             <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                 <Setter Property="Background" Value="#7E57C2"/>
                             </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" Foreground="White" Padding="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Lyrics -->
            <Border Grid.Column="1" Background="#4527A0" CornerRadius="10" Padding="20">
                <DockPanel>
                     <TextBlock Text="歌詞" DockPanel.Dock="Top" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <Panel>
                        <ScrollViewer IsVisible="{Binding !IsLyricsLoading}">
                            <TextBlock Text="{Binding CurrentLyrics}" Foreground="White" FontSize="18" TextWrapping="Wrap" TextAlignment="Center" LineHeight="30"/>
                        </ScrollViewer>
                        
                        <!-- Enhanced Loading Screen for Lyrics -->
                        <Border IsVisible="{Binding IsLyricsLoading}" 
                                Background="#3F2A5C" 
                                CornerRadius="10" 
                                Opacity="0.95">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                                <!-- Loading Animation -->
                                <Border Width="80" Height="80" 
                                        Background="#7E57C2" 
                                        CornerRadius="40"
                                        HorizontalAlignment="Center">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="5">
                                        <TextBlock Text="♪" FontSize="32" Foreground="White" HorizontalAlignment="Center"/>
                                        <ProgressBar IsIndeterminate="True" Width="50" Height="3" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Loading Text -->
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <TextBlock Text="載入歌詞中..." 
                                               Foreground="White" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding SelectedMusic.Title, StringFormat='正在處理：{0}'}" 
                                               Foreground="#B39DDB" 
                                               FontSize="14" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Progress Indicator -->
                                <ProgressBar IsIndeterminate="True" 
                                             Width="250" 
                                             Height="6" 
                                             Foreground="#B39DDB"
                                             Background="#2A1B3D"
                                             CornerRadius="3"/>
                            </StackPanel>
                        </Border>
                    </Panel>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
            <Button Content="播放/暫停" Command="{Binding TogglePlayPauseCommand}" Background="#7E57C2" Foreground="White" Padding="20,10" CornerRadius="5"/>
            <Button Content="停止" Command="{Binding StopCommand}" Background="#EF5350" Foreground="White" Padding="20,10" CornerRadius="5"/>
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="#B39DDB" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
